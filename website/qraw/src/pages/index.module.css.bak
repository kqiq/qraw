/**
 * CSS files with the .module.css suffix will be treated as CSS modules
 * and scoped locally.
 */

.heroBanner {
  padding: 4rem 0;
  text-align: center;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #010800 0%, #23167F 100%);
  color: white;
}

@media screen and (max-width: 996px) {
  .heroBanner {
    padding: 2rem;
  }
}

.buttons {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
  margin-top: 2rem;
}

/* Section Title */
.sectionTitle {
  text-align: center;
  margin-bottom: 3rem;
  font-size: 2.5rem;
  color: #010800;
  position: relative;
  display: inline-block;
  left: 50%;
  transform: translateX(-50%);
}

.sectionTitle::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 0;
  width: 100%;
  height: 4px;
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  border-radius: 2px;
}

/* API Showcase Section */
.apiShowcase {
  padding: 4rem 0;
  background-color: #fff;
  position: relative;
  overflow: hidden;
}

.apiShowcase::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%235E30C5' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.5;
  z-index: 0;
}

.apiShowcase h2 {
  font-size: 2rem;
  margin-bottom: 1.5rem;
  color: #010800;
  position: relative;
  display: inline-block;
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
}

.apiShowcase p {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #323230;
  margin-bottom: 1.5rem;
}

.apiFeatureList {
  list-style: none;
  padding: 0;
  margin: 2rem 0;
}

.apiFeatureList li {
  margin-bottom: 0.75rem;
  font-size: 1.1rem;
  color: #323230;
  position: relative;
  padding-left: 1.5rem;
  transition: transform 0.2s ease;
}

.apiFeatureList li:before {
  content: "âœ“";
  position: absolute;
  left: 0;
  color: #4CD90B;
  font-weight: bold;
}

.apiFeatureList li:hover {
  transform: translateX(5px);
  color: #5E30C5;
}

.codeBlock {
  background-color: #010800;
  border-radius: 16px;
  padding: 1.5rem;
  color: white;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  overflow: auto;
  max-height: 400px;
  border: 1px solid rgba(94, 48, 197, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.codeBlock::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  border-radius: 8px 8px 0 0;
}

.codeBlock:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 35px rgba(94, 48, 197, 0.25);
}

.codeBlock pre {
  margin: 0;
}

.codeBlock code {
  font-family: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, monospace;
  font-size: 0.9rem;
  line-height: 1.5;
  color: #f8f9fa;
}

/* Dark mode overrides for API showcase */
[data-theme='dark'] .apiShowcase {
  background-color: #121210;
}

[data-theme='dark'] .apiShowcase p {
  color: #EBEBEB;
}

[data-theme='dark'] .apiFeatureList li {
  color: #EBEBEB;
}

[data-theme='dark'] .apiFeatureList li:hover {
  color: #7C59D6;
}

[data-theme='dark'] .codeBlock {
  background-color: #1a1a1a;
  border-color: rgba(126, 80, 229, 0.3);
}

[data-theme='dark'] .codeBlock code {
  color: #f8f9fa;
}

/* Use Cases Section */
.useCases {
  padding: 4rem 0;
  background-color: #f8f9fa;
  position: relative;
  overflow: hidden;
}

.useCases::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%235E30C5' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.5;
  z-index: 0;
}

.useCasesGrid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
  position: relative;
  z-index: 1;
}

.useCaseCard {
  background-color: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  height: 100%;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(94, 48, 197, 0.1);
}

.useCaseCard::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  border-radius: 8px 8px 0 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.useCaseCard:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 35px rgba(94, 48, 197, 0.15);
}

.useCaseCard:hover::before {
  opacity: 1;
}

.useCaseIcon {
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: center;
}

.useCaseCard h3 {
  margin-bottom: 1rem;
  color: #5E30C5;
  font-size: 1.5rem;
  text-align: center;
}

.useCaseCard p {
  margin-bottom: 1.5rem;
  color: #323230;
  flex-grow: 1;
  text-align: center;
}

.useCaseLink {
  display: block;
  text-align: center;
  font-weight: 600;
  color: #5E30C5;
  transition: color 0.2s ease;
  margin-top: auto;
}

.useCaseLink:hover {
  color: #4CD90B;
  text-decoration: none;
}

/* Dark mode overrides for use cases */
[data-theme='dark'] .useCaseCard {
  background-color: #121210;
  border-color: rgba(126, 80, 229, 0.2);
}

[data-theme='dark'] .useCaseCard h3 {
  color: #7C59D6;
}

[data-theme='dark'] .useCaseCard p {
  color: #EBEBEB;
}

[data-theme='dark'] .useCaseLink {
  color: #7C59D6;
}

[data-theme='dark'] .useCaseLink:hover {
  color: #59E01C;
}

/* Stats Section */
.stats {
  padding: 4rem 0;
  background: linear-gradient(135deg, #010800 0%, #23167F 100%);
  color: white;
  text-align: center;
}

.statItem {
  padding: 1.5rem;
}

.statItem h2 {
  font-size: 3rem;
  margin-bottom: 0.5rem;
  font-weight: 700;
  color: #4CD90B;
}

.statItem p {
  font-size: 1.2rem;
  opacity: 0.8;
}

/* Testimonials Section */
.testimonials {
  padding: 4rem 0;
  background-color: #f8f9fa;
  position: relative;
  overflow: hidden;
}

.testimonialCard {
  background-color: white;
  border-radius: 16px;
  padding: 2rem;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
  height: 100%;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
  margin-bottom: 2rem;
  display: flex;
  flex-direction: column;
  border: 1px solid rgba(94, 48, 197, 0.1);
}

.testimonialCard::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  border-radius: 8px 8px 0 0;
}

.testimonialCard:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 35px rgba(94, 48, 197, 0.15);
}

.testimonialIcon {
  margin-bottom: 1.5rem;
  display: flex;
  justify-content: center;
}

.testimonialQuote {
  flex-grow: 1;
  margin-bottom: 1.5rem;
}

.testimonialQuote blockquote {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #323230;
  font-style: italic;
  margin: 0;
  position: relative;
  padding: 0 1rem;
}

.testimonialQuote blockquote::before,
.testimonialQuote blockquote::after {
  content: '"';
  font-size: 2rem;
  color: #5E30C5;
  opacity: 0.3;
  position: absolute;
}

.testimonialQuote blockquote::before {
  top: -1rem;
  left: -0.5rem;
}

.testimonialQuote blockquote::after {
  bottom: -1.5rem;
  right: -0.5rem;
}

.testimonialAuthor {
  display: flex;
  align-items: center;
  border-top: 1px solid rgba(94, 48, 197, 0.1);
  padding-top: 1.5rem;
}

.testimonialAvatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 1rem;
  border: 2px solid #5E30C5;
}

.testimonialInfo h4 {
  margin: 0 0 0.25rem 0;
  font-size: 1.1rem;
  color: #010800;
}

.testimonialInfo p {
  margin: 0;
  font-size: 0.9rem;
  color: #666;
}

/* CTA Section */
.ctaSection {
  padding: 6rem 0;
  text-align: center;
  background: linear-gradient(135deg, #010800 0%, #23167F 100%);
  position: relative;
  overflow: hidden;
}

.ctaSection::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%235E30C5' fill-opacity='0.1'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
  opacity: 0.2;
  z-index: 0;
}

.ctaSection h2 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  color: white;
  position: relative;
  z-index: 1;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.ctaSection p {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
}

.ctaButtons {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  position: relative;
  z-index: 1;
}

.ctaButtons a {
  padding: 0.75rem 2rem;
  border-radius: 50px;
  font-weight: 600;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.ctaButtons a:first-child {
  background: linear-gradient(90deg, #5E30C5 0%, #4CD90B 100%);
  border: none;
  color: white;
}

.ctaButtons a:first-child:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(94, 48, 197, 0.4);
}

.ctaButtons a:last-child {
  background: transparent;
  border: 2px solid rgba(255, 255, 255, 0.3);
  color: white;
}

.ctaButtons a:last-child:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: white;
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

@media screen and (max-width: 768px) {
  .ctaButtons {
    flex-direction: column;
    align-items: center;
  }
  
  .buttons {
    flex-direction: column;
  }
  
  .testimonialCard {
    margin-bottom: 2rem;
  }
}

/* Dark mode overrides */
[data-theme='dark'] .testimonialCard {
  background-color: #121210;
  border-color: rgba(126, 80, 229, 0.2);
}

[data-theme='dark'] .testimonialInfo h4 {
  color: #ffffff;
}

[data-theme='dark'] .testimonialInfo p {
  color: #EBEBEB;
}

[data-theme='dark'] .testimonialQuote blockquote {
  color: #EBEBEB;
}
